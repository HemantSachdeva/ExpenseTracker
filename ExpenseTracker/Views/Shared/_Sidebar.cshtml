@{
    List<Object> menuItems = new List<Object>();

    menuItems.Add(new
    {
        text = "Actions",
        separator = true,
    });
    menuItems.Add(new
    {
        text = "Dashboard",
        url = "/",
        iconCss = "fa-solid fa-box",
    });
    menuItems.Add(new
    {
        text = "Categories",
        url = "/Category",
        iconCss = "fa-solid fa-folder-closed",
        items = new List<object>()
        {
            new { text = "New", url = "/Category/AddOrEdit" },
            new { text = "View", url = "/Category/" },
        }
    });
    menuItems.Add(new
    {
        text = "Transactions",
        url = "/Transaction",
        iconCss = "fa-solid fa-arrow-right-arrow-left",
        items = new List<object>()
        {
            new { text = "New", url = "/Transaction/AddOrEdit" },
            new { text = "View", url = "/Transaction/" },
        }
    });
 }


<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px"
             target=".dock-target" enableGestures="false">
    <e-content-template>

        <div class="logo-wrapper">
            <div class="app-logo">
                <img src="~/logo.png" />
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>

        <div class="profile-wrapper" onclick="window.open('https://www.hemantsachdeva.dev','_blank');" style="cursor: pointer;">
            <img class="profile-pic" src="~/profile.jpg" />
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mb-0">Wallet App</h6>
                    <span class="text-muted">Hemant Sachdeva</span>
            </div>
        </div>

        <ejs-menu id="menu"
                  items="menuItems"
                  orientation="Vertical"></ejs-menu>
    </e-content-template>
</ejs-sidebar>

@*Make Sidebar toggleable*@
<script>
    document.addEventListener('DOMContentLoaded', function () {
        dockBar = document.getElementById('sidebar').ej2_instances[0];
        document.getElementById('sidebar-toggler').onclick = function () {
            dockBar.toggle();
        };
    });
</script>
